<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rmbr"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/display_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/vote"
        android:textAlignment="center"
        android:textColor="#ff0000"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

    <ImageButton
        android:id="@+id/display_image_view_1"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:onClick="rm"
        android:scaleType="fitCenter"
        android:src="@drawable/rm"
        android:textSize="45sp"
        />

        <ImageButton
        android:id="@+id/display_image_view_2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:onClick="br"
        android:scaleType="fitCenter"
        android:src="@drawable/brc"
        android:textSize="45sp"
        />

    </LinearLayout>

<Button
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:onClick="showMeVotes"
    android:text="show result"
    />

    <TextView
        android:id="@+id/display_text_view_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:textAlignment="center"
        android:textColor="#00ccff"
        android:textSize="45sp"
        />

</LinearLayout>
